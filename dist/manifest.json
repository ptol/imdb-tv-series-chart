{
  "manifest_version": 3,

  "name": "IMDb TV Series Chart",
  "description": "IMDb TV Series Chart",
  "version": "0.11",
  
  "icons": {
    "48": "icon_48.png",
    "96": "icon_96.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.imdb.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "css": ["css/jquery.modal.min.css", "css/style.css"]
    }
  ],
  "host_permissions": [
    "https://www.imdb.com/"
  ]
}
